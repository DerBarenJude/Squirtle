{
        "manifest_version": 2
    ,   "name": "Squirtle"
    ,   "description": "Record and playback actionable items on web pages"
    ,   "version": "1.0"
    ,   "browser_action": {
            "default_icon": "img/icon2.png"
        }
    ,   "background": {
            "scripts": ["js/jquery.js", "js/listeners.js"]
        }
    ,   "content_scripts": [
            {
                    "matches": ["https://*/*", "http://*/*"]
                ,   "js": ["js/jquery.js", "js/playback.js"]
            }
        ]
    ,   "web_accessible_resources": [
                "js/record_dialog.js"
            ,   "js/playback.js"
        ]
    ,   "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ]
}
